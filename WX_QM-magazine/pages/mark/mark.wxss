    /* pages/mark/mark.wxss */
    
    .container {
        width: 750rpx;
        margin: 0;
        padding: 0
    }
    
    .user-container {
        width: 100%;
        height: 500rpx;
        background-color: #fff;
        margin-bottom: 30rpx;
        padding: 30rpx;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        justify-content: space-between
    }
    
    .user-container .user-info {
        width: 100%;
        display: flex;
        justify-content: space-between;
    }
    
    .user-info .user-name {
        /* width: 100rpx; */
        font-size: 40rpx;
        height: 80rpx;
        line-height: 80rpx;
    }
    
    .user-info .user-avator {
        width: 100rpx;
        height: 100rpx;
        border-radius: 50%;
        overflow: hidden;
    }
    
    .user-avator image {
        width: 100%;
        height: 100%;
    }
    
    .share {
        width: 80rpx;
        height: 80rpx;
        padding: 0;
        margin: 0;
        background-color: #fff;
    }
    
    .share::after {
        border: none;
    }
    
    .share image {
        width: 100%;
        height: 100%;
    }
    
    .getInfoBtn {
        width: 100rpx;
        height: 100rpx;
        padding: 0;
        border-radius: 50%;
        margin: 0
    }
    
    .getInfoBtn image {
        width: 100%;
        height: 100%;
    }