/* components/nav/nav-cmp.wxss */

.container {
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    white-space: nowrap;
    background-color: #fff;
    z-index: 999
}

.type {
    display: inline-block;
    width: 140rpx;
    box-sizing: border-box;
    padding: 30rpx;
    color: #999;
    font-size: 40rpx
}

.type.active {
    color: #000;
    font-weight: 500;
}