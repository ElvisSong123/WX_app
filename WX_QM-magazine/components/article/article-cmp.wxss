/* components/article/article-cmp.wxss */

.container {
    width: 700rpx;
    background-color: #fff;
    /* box-sizing: border-box; */
    margin-top: 25rpx
}

.container .headPic {
    width: 700rpx;
    height: 60rpx;
    margin-bottom: 20rpx;
    padding: 20rpx 0 0 20rpx;
}

.headPic .image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.headPic .text {
    font-size: 28rpx;
    color: #aaa;
}

.content {
    margin-bottom: 20rpx;
}

.control-box {
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding-bottom: 20rpx;
}

.control-box .control {
    display: flex;
}

.control-box .tag {
    padding-left: 20rpx
}

.control-box .control .control-chil {
    margin: 0 10rpx
}

.share {
    width: 50rpx;
    height: 50rpx;
    padding: 0;
    margin: 0;
    background-color: #fff;
}

.share::after {
    border: none;
}

.share image {
    width: 100%;
    height: 100%;
    margin-bottom: 20rpx;
}