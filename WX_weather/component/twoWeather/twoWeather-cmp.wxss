.twoWeather {
    width: 750rpx;
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.twoWeather .line {
    width: 1rpx;
    height: 100%;
    border-right: 1px solid #ccc
}

.twoWeather .left,
.twoWeather .right {
    width: 40%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between
}

.twoWeather .left .top,
.twoWeather .left .bottom,
.twoWeather .right .top,
.twoWeather .right .bottom {
    width: 100%;
    height: 40%;
    display: flex;
    justify-content: space-between
}