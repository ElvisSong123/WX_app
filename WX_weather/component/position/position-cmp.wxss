/* component/position/position-cmp.wxss */

.position {
    width: 750rpx;
    height: 140rpx;
    margin-top: 60rpx;
}

.position .nowCity {
    width: 100%;
    height: 70rpx;
    text-align: center;
    line-height: 70rpx;
    font-size: 30rpx;
}

.position .search {
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 70rpx;
}

.search .airQuality,
.search .chooseCity {
    width: 120rpx;
    height: 50rpx;
    background: rgba(0, 0, 0, .3);
    text-align: center;
    margin-top: 20rpx;
    font-size: 26rpx;
    line-height: 50rpx;
}

.search .chooseCity {
    width: 200rpx;
    border-radius: 20rpx;
}