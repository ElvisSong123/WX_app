/* pages/type/type.wxss */

page {
    padding-top: 70rpx;
    background-color: #abcdef;
}

.container {
    width: 750rpx;
    padding: 0 20rpx;
}

.back {
    width: 100%;
    height: 60rpx;
    text-align: left;
    margin-bottom: 40rpx;
    position: relative;
    left: 0;
}

.back .img {
    width: 60rpx;
    height: 100%;
}

.search {
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: left
}

.search input {
    width: 300rpx;
    height: 70rpx;
    border: 1px solid #777;
    background-color: #fff
}

.search .button {
    width: 120rpx;
    height: 70rpx;
    /* display: inline-block; */
    line-height: 70rpx;
    border: 1px solid #444;
    border-left: transparent;
    text-align: center;
}